<TargetEndpoint name="covid-19-test-result-target">
  <FaultRules>
    <FaultRule name="access_token_expired">
      <Step>
        <Name>ExtractVariables.OAuthErrorFaultString</Name>
      </Step>
      <Step>
        <Name>AssignMessage.OAuthPolicyErrorResponse</Name>
      </Step>
      <Condition>oauthV2.OauthV2.VerifyAccessToken.failed</Condition>
    </FaultRule>
  </FaultRules>
  <PreFlow>
    <Request>
      <Step>
        <Name>VerifyApiKey.XApiKey</Name>
        <Condition>(proxy.pathsuffix MatchesPath "/_status") and (request.verb = "GET")</Condition>
      </Step>
      <Step>
        <Name>AssignMessage.RenameQuotaVarsFromVerifyAPIKeyPolicyClientId</Name>
      </Step>
      <Step>
        <Name>Quota</Name>
      </Step>
      <Step>
        <Name>SpikeArrest</Name>
      </Step>
    </Request>
  </PreFlow>
  <Flows>
    <Flow name="AccessTokenVerification">
      <Condition>(proxy.pathsuffix MatchesPath "/$process-message")</Condition>
      <Request>
        <Step>
          <Name>RaiseFault.MethodNotAllowed</Name>
          <Condition>request.verb != "POST"</Condition>
        </Step>
        <Step>
          <Name>VerifyAccessToken</Name>
        </Step>
      </Request>
      <Response/>
    </Flow>
  </Flows>

  <HTTPTargetConnection>
    <URL>http://mocktarget.apigee.net</URL>
    <Properties>
      <Property name="supports.http10">true</Property>
      <Property name="request.retain.headers">User-Agent,Referer,Accept-Language</Property>
      <Property name="retain.queryparams">apikey</Property>
    </Properties>
  </HTTPTargetConnection>
</TargetEndpoint>
